// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  username String  @unique
  password String
  sounds   Sound[]
  avatar   String?
  likes    Likes[] @relation("LikedSounds")
  hasLikes Likes[] @relation("SoundsWithLikes")
}

model Sound {
  id         Int      @id @default(autoincrement())
  title      String?
  published  Boolean? @default(false)
  author     User?    @relation(fields: [authorId], references: [id])
  authorName String
  authorId   Int?
  sound      String
  uploadDate DateTime @default(now())
  coverImage String?
  likes      Likes[]
  likesCount Int      @default(0)
}

// store the author user
model Likes {
  id        Int   @id @default(autoincrement())
  sound     Sound @relation(fields: [soundId], references: [id])
  soundId   Int
  author    User  @relation("SoundsWithLikes", fields: [authorId], references: [id])
  authorId  Int
  likedBy   User  @relation("LikedSounds", fields: [likedById], references: [id])
  likedById Int
}
